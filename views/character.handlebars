<div class="button-container">
  <button type="button" class="btn btn-primary" id="save-content">Save</button>
</div>
<form class="charsheet" id="charsheet" data-id="{{id}}">
  <header>
    <section class="charname">
      <label for="charname">Character Name</label><input name="charname" id="charname" value="{{#if name}}{{name}}{{else}}Character Name{{/if}}" placeholder="Character" />
    </section>
    <section class="misc">
      <ul>
        <li>
          <label for="classlevel">Class & Level</label><input
            name="classlevel"
            id="classlevel"
            value="{{class}}"
            placeholder="Paladin 2"
          />
        </li>
        <li>
          <label for="background">Background</label><input
            name="background"
            id="background"
            value="{{background}}"
            placeholder="Acolyte"
          />
        </li>
        <li>
          <label for="playername">Player Name</label><input name="playername" id="playername" value="{{#if playerName}}{{playerName}}{{else}}Player Name{{/if}}" placeholder="Player McPlayerface">
        </li>
        <li>
          <label for="race">Race</label><input
            name="race"
            id="race"
            value="{{race}}"
            placeholder="Half-elf"
          />
        </li>
        <li>
          <label for="alignment">Alignment</label><input
            name="alignment"
            id="alignment"
            value="{{alignment}}"
            placeholder="Lawful Good"
          />
        </li>
        <li>
          <label for="experiencepoints">Experience Points</label><input name="experiencepoints" id="exp" value="{{#if exp}}{{exp}}{{else}}3240{{/if}}" placeholder="3240" />
        </li>
      </ul>
    </section>
  </header>
  Saving Throws
  <main>
    <section>
      <section class="attributes">
        <div class="scores">
          <ul>
            <li>
              <div class="score">
                <label for="Strengthscore">Strength</label><input name="Strengthscore" id="strStat" value="{{#if strStat}}{{strStat}}{{else}}8{{/if}}" placeholder="10" />
              </div>
              <div class="modifier">
                <input name="Strengthmod" id="strStatMod" value="{{#if strStatMod}}{{strStatMod}}{{else}}-1{{/if}}" placeholder="+0" />
              </div>
            </li>
            <li>
              <div class="score">
                <label for="Dexterityscore">Dexterity</label><input name="Dexterityscore" id="dexStat" value="{{#if dexStat}}{{dexStat}}{{else}}8{{/if}}" placeholder="10" />
              </div>
              <div class="modifier">
                <input name="Dexteritymod" id="dexStatMod" value="{{#if dexStatMod}}{{dexStatMod}}{{else}}-1{{/if}}" placeholder="+0" />
              </div>
            </li>
            <li>
              <div class="score">
                <label for="Constitutionscore">Constitution</label><input name="Constitutionscore" id="conStat" value="{{#if conStat}}{{conStat}}{{else}}8{{/if}}" placeholder="10" />
              </div>
              <div class="modifier">
                <input name="Constitutionmod" id="conStatMod" value="{{#if conStatMod}}{{conStatMod}}{{else}}-1{{/if}}" placeholder="+0" />
              </div>
            </li>
            <li>
              <div class="score">
                <label for="Wisdomscore">Wisdom</label><input name="Wisdomscore" id="wisStat" value="{{#if wisStat}}{{wisStat}}{{else}}8{{/if}}" placeholder="10" />
              </div>
              <div class="modifier">
                <input name="Wisdommod" id="wisStatMod" value="{{#if wisStatMod}}{{wisStatMod}}{{else}}-1{{/if}}" placeholder="+0" />
              </div>
            </li>
            <li>
              <div class="score">
                <label for="Intelligencescore">Intelligence</label><input name="Intelligencescore" id="intStat" value="{{#if inStat}}{{intStat}}{{else}}8{{/if}}" placeholder="10" />
              </div>
              <div class="modifier">
                <input name="Intelligencemod" id="intStatMod" value="{{#if intStatMod}}{{intStatMod}}{{else}}-1{{/if}}" placeholder="+0" />
              </div>
            </li>
            <li>
              <div class="score">
                <label for="Charismascore">Charisma</label><input name="Charismascore" id="chaStat" value="{{#if chaStat}}{{chaStat}}{{else}}8{{/if}}" placeholder="10" />
              </div>
              <div class="modifier">
                <input name="Charismamod" id="chaStatMod" value="{{#if chaStatMod}}{{chaStatMod}}{{else}}-1{{/if}}" placeholder="+0" />
              </div>
            </li>
          </ul>
        </div>
        <div class="attr-applications">
          <div class="inspiration box">
            <div class="label-container">
              <label for="inspiration">Inspiration</label>
            </div>
            <input class="inspiration form-check-input" id="inspiration" value="{{#if inspiration}}{{inspiration}}{{else}}false{{/if}}" type="checkbox" />
          </div>
          <div class="proficiencybonus box">
            <div class="label-container">
              <label for="proficiencybonus">Proficiency Bonus</label>
            </div>
            <input name="proficiencybonus" id="proficiencyBonus" value="{{#if proficiencyBonus}}{{proficiencyBonus}}{{else}}2{{/if}}" placeholder="2" />
          </div>
          <div class="saves list-section box">
            <ul>
              <li>
                <label for="Strength-save">Strength</label><input name="Strength-save" id="strSave" value="{{#if strSave}}{{strSave}}{{else}}0{{/if}}" placeholder="+0" type="text" /><input name="Strength-save-prof" id="strSaveProf" type="checkbox" value="{{#if strSaveProf}}{{strSaveProf}}{{else}}false{{/if}}"/>
              </li>
              <li>
                <label for="Dexterity-save">Dexterity</label><input name="Dexterity-save" id="dexSave" value="{{#if dexSave}}{{dexSave}}{{else}}0{{/if}}" placeholder="+0" type="text" /><input name="Dexterity-save-prof" id="dexSaveProf" type="checkbox" value="{{#if dexSaveProf}}{{dexSaveProf}}{{else}}false{{/if}}"/>
              </li>
              <li>
                <label for="Constitution-save">Constitution </label><input name="Constitution-save" id="conSave" value="{{#if conSave}}{{conSave}}{{else}}0{{/if}}" placeholder="+0" type="text" /><input name="Constitution-save-prof" id="conSaveProf" type="checkbox" value="{{#if conSaveProf}}{{conSaveProf}}{{else}}false{{/if}}"/>
              </li>
              <li>
                <label for="Wisdom-save">Wisdom</label><input name="Wisdom-save" id="wisSave" value="{{#if wisSave}}{{wisSave}}{{else}}0{{/if}}" placeholder="+0" type="text" /><input name="Wisdom-save-prof" id="wisSaveProf" type="checkbox" value="{{#if wisSaveProf}}{{wisSaveProf}}{{else}}false{{/if}}"/>
              </li>
              <li>
                <label for="Intelligence-save">Intelligence</label><input name="Intelligence-save" id="intSave" value="{{#if intSave}}{{intSave}}{{else}}0{{/if}}" placeholder="+0" type="text" /><input name="Intelligence-save-prof" id="intSaveProf" type="checkbox" value="{{#if intSaveProf}}{{intSaveProf}}{{else}}false{{/if}}"/>
              </li>
              <li>
                <label for="Charisma-save">Charisma</label><input name="Charisma-save" id="chaSave" value="{{#if chaSave}}{{chaSave}}{{else}}0{{/if}}" placeholder="+0" type="text" /><input name="Charisma-save-prof" id="chaSaveProf" type="checkbox" value="{{#if chaSaveProf}}{{chaSaveProf}}{{else}}false{{/if}}"/>
              </li>
            </ul>
            <div class="label">
              Saving Throws
            </div>
          </div>
          <div class="skills list-section box">
            <ul>
              <li>
                <label for="Acrobatics">Acrobatics <span class="skill">(Dex)</span></label><input name="Acrobatics" id="acrobatics" value="{{#if acrobatics}}{{acrobatics}}{{else}}0{{/if}}" placeholder="+0" type="text" /><input name="Acrobatics-prof" id="acrobaticsProf" type="checkbox" value="{{#if acrobaticsProf}}{{acrobaticsProf}}{{else}}false{{/if}}" />
              </li>
              <li>
                <label for="Animal Handling">Animal Handling <span class="skill">(Wis)</span></label><input name="Animal Handling" id="animalHandling" value="{{#if animalHandling}}{{animalHandling}}{{else}}0{{/if}}" placeholder="+0" type="text" /><input name="Animal Handling-prof" id="animalHandlingProf" type="checkbox" value="{{#if animalHandlingProf}}{{animalHandlingProf}}{{else}}false{{/if}}" />
              </li>
              <li>
                <label for="Arcana">Arcana <span class="skill">(Int)</span></label><input name="Arcana" id="arcana" value="{{#if arcana}}{{arcana}}{{else}}0{{/if}}" placeholder="+0" type="text" /><input name="Arcana-prof" id="arcanaProf" type="checkbox" value="{{#if arcanaProf}}{{arcanaProf}}{{else}}false{{/if}}"/>
              </li>
              <li>
                <label for="Athletics">Athletics <span class="skill">(Str)</span></label><input name="Athletics" id="athletics" value="{{#if athletics}}{{athletics}}{{else}}0{{/if}}" placeholder="+0" type="text" /><input name="Athletics-prof" id="athleticsProf" type="checkbox" value="{{#if athleticsProf}}{{athleticsProf}}{{else}}false{{/if}}"/>
              </li>
              <li>
                <label for="Deception">Deception <span class="skill">(Cha)</span></label><input name="Deception" id="deception" value="{{#if deception}}{{deception}}{{else}}0{{/if}}" placeholder="+0" type="text" /><input name="Deception-prof" id="deceptionProf" type="checkbox" value="{{#if deceptionProf}}{{deceptionProf}}{{else}}false{{/if}}"/>
              </li>
              <li>
                <label for="History">History <span class="skill">(Int)</span></label><input name="History" id="history" value="{{#if history}}{{history}}{{else}}0{{/if}}" placeholder="+0" type="text" /><input name="History-prof" id="historyProf" type="checkbox" value="{{#if historyProf}}{{historyProf}}{{else}}false{{/if}}"/>
              </li>
              <li>
                <label for="Insight">Insight <span class="skill">(Wis)</span></label><input name="Insight" id="insight" value="{{#if insight}}{{insight}}{{else}}0{{/if}}" placeholder="+0" type="text" /><input name="Insight-prof" id="insightProf" type="checkbox" value="{{#if insightProf}}{{insightProf}}{{else}}false{{/if}}"/>
              </li>
              <li>
                <label for="Intimidation">Intimidation <span class="skill">(Cha)</span></label><input name="Intimidation" id="intimidation" value="{{#if intimidation}}{{intimidation}}{{else}}0{{/if}}" placeholder="+0" type="text" /><input name="Intimidation-prof" id="intimidationProf" type="checkbox" value="{{#if intimidationProf}}{{intimidationProf}}{{else}}false{{/if}}"/>
              </li>
              <li>
                <label for="Investigation">Investigation <span class="skill">(Int)</span></label><input name="Investigation" id="investigation" value="{{#if investigation}}{{investigation}}{{else}}0{{/if}}" placeholder="+0" type="text" /><input name="Investigation-prof" id="investigationProf" type="checkbox" value="{{#if investigationProf}}{{investigationProf}}{{else}}false{{/if}}"/>
              </li>
              <li>
                <label for="Medicine">Medicine <span class="skill">(Wis)</span></label><input name="Medicine" id="medicine" value="{{#if medicine}}{{medicine}}{{else}}0{{/if}}" placeholder="+0" type="text" /><input name="Medicine-prof" id="medicineProf" type="checkbox" value="{{#if medicineProf}}{{medicineProf}}{{else}}false{{/if}}"/>
              </li>
              <li>
                <label for="Nature">Nature <span class="skill">(Int)</span></label><input name="Nature" id="nature" value="{{#if nature}}{{nature}}{{else}}0{{/if}}" placeholder="+0" type="text" /><input name="Nature-prof" id="natureProf" type="checkbox" value="{{#if natureProf}}{{natureProf}}{{else}}false{{/if}}"/>
              </li>
              <li>
                <label for="Perception">Perception <span class="skill">(Wis)</span></label><input name="Perception" id="perception" value="{{#if perception}}{{perception}}{{else}}0{{/if}}" placeholder="+0" type="text" /><input name="Perception-prof" id="perceptionProf" type="checkbox" value="{{#if perceptionProf}}{{perceptionProf}}{{else}}false{{/if}}"/>
              </li>
              <li>
                <label for="Performance">Performance <span class="skill">(Cha)</span></label><input name="Performance" id="performance" value="{{#if performance}}{{performance}}{{else}}0{{/if}}" placeholder="+0" type="text" /><input name="Performance-prof" id="performanceProf" type="checkbox" value="{{#if performanceProf}}{{performanceProf}}{{else}}false{{/if}}"/>
              </li>
              <li>
                <label for="Persuasion">Persuasion <span class="skill">(Cha)</span></label><input name="Persuasion" id="persuasion" value="{{#if persuasion}}{{persuasion}}{{else}}0{{/if}}" placeholder="+0" type="text" /><input name="Persuasion-prof" id="persuasionProf" type="checkbox" value="{{#if persuasionProf}}{{persuasionProf}}{{else}}false{{/if}}"/>
              </li>
              <li>
                <label for="Religion">Religion <span class="skill">(Int)</span></label><input name="Religion" id="religion" value="{{#if religion}}{{religion}}{{else}}0{{/if}}" placeholder="+0" type="text" /><input name="Religion-prof" id="religionProf" type="checkbox" value="{{#if religionProf}}{{religionProf}}{{else}}false{{/if}}"/>
              </li>
              <li>
                <label for="Sleight of Hand">Sleight of Hand <span class="skill">(Dex)</span></label><input name="Sleight of Hand" id="sleightOfHand" value="{{#if sleightOfHand}}{{sleightOfHand}}{{else}}0{{/if}}" placeholder="+0" type="text" /><input name="Sleight of Hand-prof" id="sleightOfHandProf" type="checkbox" value="{{#if sleightOfHandProf}}{{sleightofHandProf}}{{else}}false{{/if}}"/>
              </li>
              <li>
                <label for="Stealth">Stealth <span class="skill">(Dex)</span></label><input name="Stealth" id="stealth" value="{{#if stealth}}{{stealth}}{{else}}0{{/if}}" placeholder="+0" type="text" /><input name="Stealth-prof" id="stealthProf" type="checkbox" value="{{#if stealthProf}}{{stealthProf}}{{else}}false{{/if}}"/>
              </li>
              <li>
                <label for="Survival">Survival <span class="skill">(Wis)</span></label><input name="Survival" id="survival" value="{{#if survival}}{{survival}}{{else}}0{{/if}}" placeholder="+0" type="text" /><input name="Survival-prof" id="survivalProf" type="checkbox" value="{{#if survivalProf}}{{survivalProf}}{{else}}false{{/if}}"/>
              </li>
            </ul>
            <div class="label">
              Skills
            </div>
          </div>
        </div>
      </section>
      <div class="passive-perception box">
        <div class="label-container">
          <label for="passiveperception" id="passiveperception">Passive Wisdom
            (Perception)</label>
        </div>
        <input name="passiveperception" id="passiveWisdom" value="{{#if passiveWisdom}}{{passiveWisdom}}{{else}}0{{/if}}" placeholder="10" />
      </div>
      <div class="otherprofs box textblock">
        <label for="otherprofs">Other Proficiencies and Languages</label><textarea
          id="otherProficienciesAndLanguages"
          value="{{otherProficienciesAndLanguages}}"
          name="otherprofs"
        >{{otherProficienciesAndLanguages}}</textarea>
      </div>
    </section>
    <section>
      <section class="combat">
        <div class="armorclass">
          <div>
            <label for="ac">Armor Class</label><input id="armorClass" value="{{#if armorClass}}{{armorClass}}{{else}}10{{/if}}" name="ac" placeholder="10" type="text" />
          </div>
        </div>
        <div class="initiative">
          <div>
            <label for="initiative">Initiative</label><input id="initiative" value="{{#if initiative}}{{initiative}}{{else}}0{{/if}}" name="initiative" placeholder="+0" type="text" />
          </div>
        </div>
        <div class="speed">
          <div>
            <label for="speed">Speed</label><input id="speed" value="{{#if speed}}{{speed}}{{else}}30{{/if}}" name="speed" placeholder="30" type="text" />
          </div>
        </div>
        <div class="hp">
          <div class="regular">
            <div class="max">
              <label for="maxhp">Hit Point Maximum</label><input id="maxHp" value="{{#if maxHp}}{{maxHp}}{{else}}1{{/if}}" name="maxhp" placeholder="10" type="text" />
            </div>
            <div class="current">
              <label for="currenthp">Current Hit Points</label><input id="currentHp" value="{{#if currentHp}}{{currentHp}}{{else}}1{{/if}}" name="currenthp" type="text" />
            </div>
          </div>
          <div class="temporary">
            <label for="temphp">Temporary Hit Points</label><input id="tempHp" value="{{#if tempHp}}{{tempHp}}{{else}}0{{/if}}" name="temphp" type="text" />
          </div>
        </div>
        <div class="hitdice">
          <div>
            <div class="total">
              <label for="totalhd">Total</label><input id="hitDice" value="{{#if hitDice}}{{hitDice}}{{else}}1{{/if}}" name="totalhd" placeholder="2d10" type="text" />
            </div>
            <div class="remaining">
              <label for="remaininghd">Hit Dice</label><input value="{{#if hitDice}}{{hitDice}}{{else}}1{{/if}}" name="remaininghd" type="text" />
            </div>
          </div>
        </div>
        <div class="deathsaves">
          <div>
            <div class="label">
              <label>Death Saves</label>
            </div>
            <div class="marks">
              <div class="deathsuccesses">
                <label>Successes</label>
                <div class="bubbles">
                  <input
                    name="deathsuccess1"
                    value="{{deathSavesSuccess}}"
                    type="checkbox"
                  />
                  <input
                    name="deathsuccess2"
                    value="{{deathSavesSuccess}}"
                    type="checkbox"
                  />
                  <input
                    name="deathsuccess3"
                    value="{{deathSavesSuccess}}"
                    type="checkbox"
                  />
                </div>
              </div>
              <div class="deathfails">
                <label>Failures</label>
                <div class="bubbles">
                  <input
                    name="deathfail1"
                    value="{{deathSavesFail}}"
                    type="checkbox"
                  />
                  <input
                    name="deathfail2"
                    value="{{deathSavesFail}}"
                    type="checkbox"
                  />
                  <input
                    name="deathfail3"
                    value="{{deathSavesFail}}"
                    type="checkbox"
                  />
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <section class="attacksandspellcasting">
        <div>
          <label>Attacks & Spellcasting</label>
          <table>
            <thead>
              <tr>
                <th>
                  Name
                </th>
                <th>
                  Atk Bonus
                </th>
                <th>
                  Damage/Type
                </th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <input
                    value="{{spellcastingAbility}}"
                    name="atkname1"
                    type="text"
                  />
                </td>
                <td>
                  <input
                    value="{{spellAttackBonus}}"
                    name="atkbonus1"
                    type="text"
                  />
                </td>
                <td>
                  <input
                    value="{{spellSaveDc}}"
                    name="atkdamage1"
                    type="text"
                  />
                </td>
              </tr>
              <tr>
                <td>
                  <input
                    value="{{spellcastingAbility}}"
                    name="atkname2"
                    type="text"
                  />
                </td>
                <td>
                  <input
                    value="{{spellAttackBonus}}"
                    name="atkbonus2"
                    type="text"
                  />
                </td>
                <td>
                  <input
                    value="{{spellSaveDc}}"
                    name="atkdamage2"
                    type="text"
                  />
                </td>
              </tr>
              <tr>
                <td>
                  <input
                    value="{{spellcastingAbility}}"
                    name="atkname3"
                    type="text"
                  />
                </td>
                <td>
                  <input
                    value="{{spellAttackBonus}}"
                    name="atkbonus3"
                    type="text"
                  />
                </td>
                <td>
                  <input
                    value="{{spellSaveDc}}"
                    name="atkdamage3"
                    type="text"
                  />
                </td>
              </tr>
            </tbody>
          </table>
          <textarea value="{{attacksAndSpellcasting}}"></textarea>
        </div>
      </section>
      <section class="equipment">
        <div>
          <label>Equipment</label>
          <div class="money">
            <ul>
              <li>
                <label for="cp">cp</label><input
                  value="{{equipment}}"
                  name="cp"
                />
              </li>
              <li>
                <label for="sp">sp</label><input
                  value="{{equipment}}"
                  name="sp"
                />
              </li>
              <li>
                <label for="ep">ep</label><input
                  value="{{equipment}}"
                  name="ep"
                />
              </li>
              <li>
                <label for="gp">gp</label><input
                  value="{{equipment}}"
                  name="gp"
                />
              </li>
              <li>
                <label for="pp">pp</label><input
                  value="{{equipment}}"
                  name="pp"
                />
              </li>
            </ul>
          </div>
          <textarea
            value="{{equipment}}"
            placeholder="Equipment list here"
          ></textarea>
        </div>
      </section>
    </section>
    <section>
      <section class="flavor">
        <div class="personality">
          <label for="personality">Personality</label><textarea
            id="personalityTraits"
            value="{{personalityTraits}}"
            name="personality"
          >{{personalityTraits}}</textarea>
        </div>
        <div class="ideals">
          <label for="ideals">Ideals</label><textarea
            id="ideals"
            value="{{ideals}}"
            name="ideals"
          >{{ideals}}</textarea>
        </div>
        <div class="bonds">
          <label for="bonds">Bonds</label><textarea
            id="bonds"
            value="{{bonds}}"
            name="bonds"
          >{{bonds}}</textarea>
        </div>
        <div class="flaws">
          <label for="flaws">Flaws</label><textarea
            id="flaws"
            value="{{flaws}}"
            name="flaws"
          >{{flaws}}</textarea>
        </div>
      </section>
      <section class="features">
        <div>
          <label for="features">Features & Traits</label><textarea
            id="featuresAndTraits"
            value="{{featuresAndTraits}}"
            name="features"
          >{{featuresAndTraits}}</textarea>
        </div>
      </section>
    </section>
  </main>
</form>
<script src="/js/pdf.js"></script>
<script src="/js/saveCharacter.js"></script>